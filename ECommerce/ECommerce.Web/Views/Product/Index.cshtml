@model IEnumerable<ECommerce.Web.Models.ProductViewModel>

@{
    ViewData["Title"] = "Ürünler";
}

<h2>Ürünler</h2>
<a asp-action="Create" class="btn btn-success mb-2">Yeni Ürün Ekle</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Aktif mi?</th>
            <th>Kategori</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.UnitPrice</td>
                <td>@item.Stock</td>
                <td>@(item.IsActive ? "Evet" : "Hayır")</td>
                <td>@item.CategoryName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>