@model ECommerce.Web.Models.ProductViewModel
@{
    ViewData["Title"] = "Ürün Sil";
}
<h2>Ürün Sil</h2>
<h4>Bu ürünü silmek istediğinize emin misiniz?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Adı</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Fiyat</dt>
        <dd class="col-sm-10">@Model.UnitPrice</dd>
        <dt class="col-sm-2">Stok</dt>
        <dd class="col-sm-10">@Model.Stock</dd>
        <dt class="col-sm-2">Kategori</dt>
        <dd class="col-sm-10">@Model.CategoryName</dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>