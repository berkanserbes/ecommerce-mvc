@model IEnumerable<ECommerce.Domain.Entities.Category>
@{
    ViewData["Title"] = "Kategoriler";
}
<h2>Kategoriler</h2>
<a asp-action="Create" class="btn btn-success mb-2">Yeni Kategori Ekle</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Adı</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>